<div class="container-fluid">
    <h2>Selamat Datang di Halaman Contact</h2>
<h6>Daftar Kontak</h6>
<% if (msg.length !== 0) { %>
    <div class="alert alert-success" role="alert">
        <%= msg %> 
      </div>
<% } %>
<a href="/contact/add" class="btn btn-success">Tambah Data</a>
<table class="table">
    <tr>
        <th>#</th>
        <th>Nama</th>
        <th>Nomor Handphone</th>
        <th>Aksi</th>
    </tr>
    <% let no = 1; %> 
    <% contacts.forEach(ctc => { %>
        <tr>
            <td><%= no++  %> </td>
            <td><%= ctc.nama %></td>
            <td><%= ctc.nohp %></td>
            <td>
                <a href="/contact/<%= ctc.nama %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle me-3"></i>Detail</a>
                <a href="/contact/edit/<%= ctc.nama %>" class="btn btn-primary badge rounded-pill">Ubah</a>
                <form action="/contact?_method=DELETE" method="POST">
                    <input type="hidden" name="id" value="<%= ctc._id %>">
                    <button type="submit" class="btn btn-danger badge rounded-pill" onclick="return confirm('yakin?')">Hapus</button>
                </form>
            </td>
        </tr>
    <% }) %>
</table>
</div>